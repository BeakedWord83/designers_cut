<%- include('../includes/designer/designer-head.ejs') %>
</head>
<%- include('../includes/designer/nav-menu.ejs') %>
<main>
<% if (designs.length > 0) { %>

<h1 style="text-align: center;">My Designs!!!!!!!!!!!!!!!!!!!!</h1>
<div style="position:relative;width: 1000px; height: 500px; padding-left:300px;overflow-wrap: anywhere; overflow-y: scroll;"> 
<% designs.forEach(design => { %>
 <% if (design.exists) { %>
    
<div style="width: 200px; height: 200px; position: relative; display: inline-block; border: 1px solid #ccc; margin-right: 20px; margin-bottom: 20px;" href="/item/<%=design._id%>">
        <img src="<%= design.imagePath%>" alt="Design!!!" style="width: 100%; height: 100%">
        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 20%; background-color: rgba(255, 0,0, 0.7); text-align: center;" > 
        <a href="/remove-from-sale/<%=design.imageName%>" style="display: inline-block; width: 100%; height: 100%; text-decoration: none; color: white; font-weight: bold;">
            Remove from Sale
        </a>
    </div>
    </div>
        
   
<% } else { %>    
<div style="width: 205px; height: 200px; float: left; margin-right: 20px; margin-left: 20px; margin-bottom: 20px; position: relative; border: 1px solid #ccc;padding: 0;">
    <img src="<%= design.imagePath%>" alt="Design!!!"  style="width: 100%; height: 100%">
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 20%;">
        <ul style="margin: 0; list-style-type: none; padding:0; display: flex; height: 100%;">
            <li style="background:rgba(0, 255, 0, 0.7);width: 50%; height: 100%; font-weight: bold; display: inline-block;">
                <a style="display: inline-block; text-decoration: none; color: black; width: 100%; height: 100%" href="/add-product/<%=design.imageName%>">Add Product</a>
           </li>
            <li style="background:rgba(255, 0, 0, 0.7);width: 50%; height: 100%; font-weight: bold; display: inline-block;">
                <a style=" display: inline-block; text-decoration: none;color: white; width: 100%; height: 100%" href="/remove-from-inventory/<%=design.imageName%>">Remove from Inventory</a>
            </li>
            
        </ul>
</div>
    
    
</div>    
<% } %>
<% }) %>

<% } else { %>
    <h1 style="text-align: center;">No Designs Yet!</h1>
<% } %>
</div>


</main>

<%- include('../includes/footer.ejs') %>
