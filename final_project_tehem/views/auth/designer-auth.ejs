           <form action='/designer-login', method='POST'> 
     <div class="cont_form_login">
    <a href="#" onclick="ocultar_login_sign_up()" ><i class="material-icons">&#xE5C4;</i></a>
       <h2>LOGIN</h2>
     <input type="text" placeholder="Username" name="username"/>
    <input type="password" placeholder="Password" name="password" />
    <button class="btn_login" onclick="cambiar_login()">LOGIN</button>
      </div>
    </form>
      

      <form action="/designer-register" method="POST" enctype="multipart/form-data"> 
       <div class="cont_form_sign_up">
         
    <a href="#" onclick="ocultar_login_sign_up()"><i class="material-icons">&#xE5C4;</i></a>
         <h2>SIGN UP</h2>
    <input type="text" name="username" autocomplete="off" value="" placeholder="Username" />
    <input type="password" name="password" autocomplete="off" value="" placeholder="Password" />
    <br>
    <br>
    <textarea name="description" autocomplete="off" value="" placeholder="Describe yourself and your work"></textarea>
    <label for="image">Profile Picture</label>
    <input type="file" id="image" name="image" />
    
    <button class="btn_sign_up" type="submit" onclick="cambiar_sign_up()">SIGN UP</button>
    
      </div>
      </form>
    
        </div>
        
      </div>
